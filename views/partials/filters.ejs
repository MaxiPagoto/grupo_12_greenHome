<div class="filtros-container">
    
    <form action="/products/filter" class= "filtros">
    <div class="row d-flex justify-content-between w-100 p-3">
        <div class="col-12 col-lg-3 col-md-12 col-sm-12">
            <label>Tipo</label><br>
            <select class="filtro-select w-100" name="category_id" id="">
                <option value="">Todas</option>
                <% for (category of categories) { %>
                    <% if (category.id == queries[0]) {%>         
                <option value="<%=category.id%>" selected><%=category.name%></option>
                <% } else { %> 
                    <option value="<%=category.id%>"><%=category.name%></option>
                    <% }} %> 
            </select>
    
        </div>
        <div class="col-12 col-lg-3 col-md-12 col-sm-12">
            <label>Ambiente</label><br>
            <select class="filtro-select w-100" name="filter_room" id="">
                <option value="0">Todas</option>
                <% for (room of rooms) { %> 
                    <% if (room.id == queries[1]) { %> 
                    <option value="<%=room.id%>" selected><%=room.name%></option>
                    <% } else { %>
                    <option value="<%=room.id%>"><%=room.name%></option>
                    <% }} %> 

            </select>
    
        </div>
        <div class="col-12 col-lg-3 col-md-12 col-sm-12">
            <label>Cuidados</label><br>
                <select class="filtro-select w-100" name="filter_dificult" id="">
                    <option value="0">Todos</option>
                    <option value="1"<% if(queries[2]==1){%>selected <% } %>  >Poco cuidado</option>
                    <option value="2"<% if(queries[2]==2){%>selected <% } %>>Requiere atencion</option>
                    <option value="3"<% if(queries[2]==3){%>selected <% } %>>Cuidado especial</option>
                </select>
        </div>
        <button class="filtros-button col-12 col-lg-3 col-md-12 col-sm-12 col align-self-center mt-3" type="submit">Filtrar</button>
        </form> 
    </div>
    <div class="row d-flex align-items-end justify-content-end w-100">
        <div class="col-12 col-sm-12 col-md-6 col-lg-4 col-xl-3 col-xs align-items-end justify-self-end" >
            <form action="/products/search" method="GET" class="search-product">
                <input type="search" name="search_query">
                <button type="submit"class="filtros-button">Buscar</button>
            </form>
        </div>
        
    </div>
        
    
    
   
</div>
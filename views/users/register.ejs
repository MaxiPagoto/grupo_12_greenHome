<body>
    <%-include('../partials/header')%>                
    </section>
    </header>
    <main>
        <section class="registro-container">
            <h2 class="titulo-registro">Registrarse</h2>
            <div class="post-container">
                <ul class = "errors-ul">
                    <%if (typeof errors != 'undefined'){ for (error of errors){%>
                    <li class="errors-li"><%=error.msg%></li>
                    <%}}%>
                </ul>
           
                <form action="/users/register" method="POST" enctype="multipart/form-data">
                    <div class="registro-input">
                        <input class="box-container" type="email" name="email" id="email" placeholder="Email">
                    </div>
                    <div class="registro-input">
                        <input class="box-container" type="text" name="first_name" id="first_name" placeholder="Nombre">
                    </div>
                    <div class="registro-input"> 
                        <input class="box-container" type="text" name="last_name" id="last_name" placeholder="Apellido">
                    </div>
                    <div class="registro-input">
                        <label for="image" class="form-label col-12">Avatar:</label>
						<input type="file" id="image" name="avatar" class="">
                    </div>
                    <div class="registro-input registro-contrase침a">
                        <input class="box-container" type="password" name="password" id="password" placeholder="Contrase침a">
                    </div>
                    <div class="registro-input">
                        <input class="box-container" type="password" name="retype" id="retype" placeholder="Confirmaci칩n contrase침a">
                    </div>
                    <div class="registro-input">
                        <button type="submit" class="box-container-buttom">Registrarse</button>
                    </div>
                </form>
            </div>
        </section>

    </main>  
    
</body>
</html>